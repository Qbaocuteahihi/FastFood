@{
    ViewData["Title"] = "Trang Chính";
}

<h1>Chào mừng đến với Fast Food</h1>

<div class="card-container">
    <div class="card" onclick="window.location.href='@Url.Action("Category", "Home", new { category = "Đồ ăn" })'">
        <img src="https://luonggiacompany.com/wp-content/uploads/2020/09/do-an-nhanh.jpg" alt="Đồ ăn" class="card-image" />
        <h2>Đồ ăn</h2>
        <p>Xem tất cả các món ăn ngon.</p>
    </div>
    <div class="card" onclick="window.location.href='@Url.Action("Category", "Home", new { category = "Nước" })'">
        <img src="https://cdn.tgdd.vn/2021/05/CookProduct/thumbnuocngot-1200x676.jpg" alt="Nước" class="card-image" />
        <h2>Nước</h2>
        <p>Xem tất cả các loại nước giải khát.</p>
    </div>
    <div class="card" onclick="window.location.href='@Url.Action("Category", "Home", new { category = "Combo" })'">
        <img src="https://thesamikhsya.com/wp-content/uploads/2019/01/fatty-foods2.jpg" alt="Combo" class="card-image" />
        <h2>Combo</h2>
        <p>Xem tất cả các combo hấp dẫn.</p>
    </div>
</div>

<style>
    body {
        font-family: Arial, sans-serif;
        
        margin: 0;
        padding: 20px;
    }

    h1 {
        text-align: center;
        color: #333;
    }

    .card-container {
        display: flex;
        justify-content: space-around;
        margin-top: 20px;
    }

    .card {
        width: 30%;
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 8px;
        text-align: center;
        cursor: pointer;
        transition: transform 0.2s;
        background-color: #fff; /* Nền trắng cho thẻ */
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1); /* Đổ bóng cho thẻ */
    }

        .card:hover {
            transform: scale(1.05);
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2); /* Đổ bóng khi hover */
        }

    .card-image {
        width: 100%;
        height: auto;
        border-radius: 8px;
        margin-bottom: 15px; /* Khoảng cách giữa ảnh và văn bản */
    }
</style>