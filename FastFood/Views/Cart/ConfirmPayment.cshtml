@model ShoppingCart
@{
    ViewData["Title"] = "Xác nhận thanh toán";
}

<h2>Xác nhận thanh toán</h2>
<p>Phương thức thanh toán: @ViewBag.PaymentMethod</p>

<table>
    <thead>
        <tr>
            <th>Sản phẩm</th>
            <th>Giá</th>
            <th>Số lượng</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.GetItems())
        {
            <tr>
                <td>@item.Product.Name</td>
                <td>@((item.Product.Price ).ToString("N0")) VND</td>
                <td>@item.Quantity</td>
            </tr>
        }
    </tbody>
</table>

<form method="post" asp-controller="Cart" asp-action="Checkout">
    <input type="hidden" name="paymentMethod" value="@ViewBag.PaymentMethod" />
    <button type="submit" class="btn">Xác nhận thanh toán</button>
</form>